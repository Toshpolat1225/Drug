<h1>Мои заказы</h1>
<hr>
{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Заказ <small>{{_id}}</small></span>
                        <p class="date">Дата {{date}}</p>
                        <p><em>{{user.userId.name}}</em>({{user.userId.email}})</p>
                        <ol>
                            {{#each drugs}}
                            <li>
                                {{drug.model}} (x<strong>{{count}}</strong>)
                                <p>Количество: <span>{{drug.sort}}</span></p>
                                <p>Количество: <span>{{drug.amount}}</span></p>
                                <p>Cтрана : <span>{{drug.country}}</span></p>
                            </li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Цену: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Заказов пока нет</p>
{{/if}}